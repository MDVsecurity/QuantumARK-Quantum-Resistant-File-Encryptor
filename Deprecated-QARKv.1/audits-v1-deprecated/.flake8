[flake8]
# Configuraci√≥n de flake8 para QuantumARK
max-line-length = 88
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    audits,
    .venv,
    venv,
    env

# Configuraciones adicionales
per-file-ignores =
    __init__.py:F401
max-complexity = 10
select = E,W,F,C
